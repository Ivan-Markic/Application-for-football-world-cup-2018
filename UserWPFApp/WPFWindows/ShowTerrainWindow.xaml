<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserWPFApp.WPFWindows"
        xmlns:WPFUsers="clr-namespace:UserWPFApp.WPFUsers"
        xmlns:lang="clr-namespace:UserWPFApp.Properties"
        x:Class="UserWPFApp.WPFWindows.ShowTerrainWindow"
        mc:Ignorable="d"
        Title="{x:Static lang:Resources.fieldTitle}" Height="320" Width="640" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid x:Name="grid">
        <Grid.Background>
            <ImageBrush x:Name="backgroundImage"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Window>
